<h1>Restaurant</h1>

<ul class="list-group">
  <li>Name: <%= @restaurant.name %></li>
  <li>Address: <%= @restaurant.address %></li>
  <li>Category: <%= @restaurant.category %></li>
  <li>phone number: <%= @restaurant.phone_number %></li>
</ul>

<p><strong>Reviews</strong></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %> <%= review.rating %></li>

  <% end %>
</ul>

<%= link_to "Back", restaurants_path %>
<%= link_to "Add Review",  new_restaurant_review_path(@restaurant) %>
